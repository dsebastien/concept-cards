{
    "name": "concept-cards",
    "private": true,
    "version": "10.42.0",
    "description": "Concepts catalog website",
    "author": "SÃ©bastien Dubois",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dsebastien/concept-cards.git"
    },
    "bugs": {
        "url": "https://github.com/dsebastien/concept-cards/issues"
    },
    "homepage": "https://concepts.dsebastien.net",
    "scripts": {
        "update:products": "bun scripts/update-products.ts",
        "add-product-links": "bun scripts/add-product-links.ts",
        "dedupe-concepts": "bun scripts/dedupe-concepts.ts",
        "validate": "bun scripts/validate-concepts.ts",
        "validate:quick": "bun scripts/validate-concepts.ts --skip-urls",
        "validate:fix": "bun scripts/validate-concepts.ts --skip-urls --fix-relations",
        "fix-refs": "bun scripts/fix-concept-refs.ts",
        "populate-dates": "bun scripts/populate-concept-dates.ts",
        "fix-concepts": "bun run add-product-links && bun run fix-refs && bun run populate-dates",
        "update": "bun run add-product-links && bun run fix-refs && bun run populate-dates",
        "extract-books": "bun scripts/extract-books.ts",
        "generate-social-images": "bun scripts/generate-social-images.ts",
        "generate-rss-feed": "bun scripts/generate-rss-feed.ts",
        "generate-static-pages": "bun scripts/generate-static-pages.ts",
        "generate-sitemap": "bun scripts/generate-sitemap.ts",
        "generate-llms-txt": "bun scripts/generate-llms-txt.ts",
        "dev": "bun scripts/utils/dev.ts",
        "merge-concepts": "bun scripts/utils/merge-concepts.ts",
        "build": "bun run merge-concepts && tsc && bun scripts/generate-social-images.ts && bun scripts/utils/build.ts && bun run --parallel generate-static-pages generate-sitemap generate-llms-txt generate-rss-feed",
        "build:ci": "bun run merge-concepts && tsc && bun scripts/utils/build.ts && bun run --parallel generate-static-pages generate-sitemap generate-llms-txt generate-rss-feed",
        "preview": "bun --bun serve dist -p 4173",
        "prepare": "husky",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write .",
        "tsc": "bun run merge-concepts && tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch --preserveWatchOutput",
        "tscw": "bun run tsc:watch",
        "commit": "cz",
        "cm": "bun run commit",
        "commit:lint": "commitlint --from HEAD~1 --to HEAD --verbose",
        "release": "bash scripts/release.sh",
        "release:next-version": "bun scripts/calculate-next-version.ts --verbose",
        "release:update-version": "bun scripts/update-version.ts",
        "release:changelog": "bun scripts/generate-changelog.ts",
        "push": "git push && git push --tags",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "validate:all": "bun run validate:quick",
        "ci:local": "bun run --parallel lint test && bun run tsc && bun run validate:all && bun run build",
        "audit:local": "lighthouse http://localhost:5173 --output=json --output=html --output-path=./lighthouse-reports/local --chrome-flags=\"--headless --no-sandbox\"",
        "audit:production": "lighthouse https://concepts.dsebastien.net --output=json --output=html --output-path=./lighthouse-reports/production --chrome-flags=\"--headless --no-sandbox\"",
        "add": "bun run format && git add -A && bun run commit"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.cjs"
        }
    },
    "engines": {
        "node": ">=20.0"
    },
    "optionalDependencies": {
        "@resvg/resvg-js-linux-x64-gnu": "2.6.2"
    },
    "dependencies": {
        "@tanstack/react-virtual": "3.13.18",
        "better-sqlite3": "11.10.0",
        "canvas-confetti": "1.9.4",
        "clsx": "2.1.1",
        "framer-motion": "12.29.2",
        "inquirer": "12.11.1",
        "natural": "8.1.0",
        "react": "19.2.4",
        "react-dom": "19.2.4",
        "react-force-graph-2d": "1.29.1",
        "react-icons": "5.5.0",
        "react-markdown": "10.1.0",
        "react-router": "7.9.6",
        "tailwind-merge": "3.4.0"
    },
    "devDependencies": {
        "@types/inquirer": "9.0.9",
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "20.0.0",
        "@eslint/js": "9.39.2",
        "@resvg/resvg-js": "2.6.2",
        "@types/better-sqlite3": "7.6.13",
        "@types/bun": "1.3.8",
        "@types/canvas-confetti": "1.9.0",
        "@types/natural": "5.1.5",
        "@types/node": "24.10.1",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "commitizen": "4.3.1",
        "conventional-changelog-cli": "5.0.0",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "cz-customizable": "7.5.1",
        "eslint": "9.39.2",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-react": "7.37.5",
        "globals": "16.5.0",
        "husky": "9.1.7",
        "lighthouse": "13.0.1",
        "lint-staged": "16.2.7",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "0.7.2",
        "serve": "14.2.5",
        "tailwindcss": "4.1.17",
        "typescript": "5.9.3",
        "typescript-eslint": "8.48.0"
    }
}
